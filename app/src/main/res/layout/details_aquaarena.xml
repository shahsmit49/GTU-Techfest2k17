<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Fragment"
    android:background="@mipmap/bg_poster">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/transparent">

                <ImageView
                    style="@style/DetailsImage"
                    android:id="@+id/header_image"
                    android:src="@drawable/aqua_arena"/>
            </LinearLayout>
            <View style="@style/HorizontalDivider"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/content"
                android:layout_marginTop="5sp"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/transparent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailsSmallTitle"
                        android:text="DESCRIPTION"
                        android:paddingBottom="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text="- It is a presentation based event. The main objective of this event is to increase communication and understanding level of the students."
                        android:paddingBottom="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailsSmallTitle"
                        android:text="RULES AND REGULATIONS:"
                        android:paddingBottom="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text=" 1. Each team can have maximum 4 members. \n 2. Group/individuals can present either Model or a Poster, Explanation is to be done in English.\n 3. Size of poster- A1 size sheet (594mm*841mm)\n 4. Model may be Working /Non working.\n 5. Time limit is 10 minutes.\n 6. Emphasis on new ideas and technologies should be considered for reuse of waste water.\n 7. All rights are reserved with the coordinators."
                        android:paddingBottom="15sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text="No of Participants : Min 1 and Max 4 "
                        android:id="@+id/textView18"
                        android:paddingBottom="15sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/set_alarm"
            android:text="Remind Me"
            android:onClick="setReminder"
            style="@style/Text"
            android:background="@color/bnew"/>

    </LinearLayout>
</LinearLayout>