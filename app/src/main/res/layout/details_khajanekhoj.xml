<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_poster"
    style="@style/Fragment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                >
                <ImageView
                    style="@style/DetailsImage"
                    android:src="@drawable/treasure_hunt"
                    android:id="@+id/header_image" />

            </LinearLayout>
            <View style="@style/HorizontalDivider"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/content"
                android:background="@android:color/transparent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5sp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailsSmallTitle"
                        android:text="DESCRIPTION"
                        android:paddingBottom="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text="- This is an event in which teams use their collective brain power .Apart from this wholesome combination of time-management, physical capabilities and coordination amongst the members of various teams will be tested."
                        android:paddingBottom="15sp"
                        />
                </LinearLayout>
                <View style="@style/HorizontalDivider"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="2sp"
                    android:background="@android:color/transparent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailsSmallTitle"
                        android:text="RULES AND REGULATIONS:"
                        android:paddingBottom="10sp"
                        />

                    <TextView
                        android:layout_width="367dp"
                        android:layout_height="wrap_content"
                        style="@style/DetailsSmallTitle"
                        android:text="ROUND 1:(Mindâ€“Twister)"
                        android:paddingBottom="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text=" 1. In this round participants will be shown a large list of items.\n 2. The participants, after completely seeing the list have to note down the items (in any order) from the given list of items.\n 3. More the number of items listed by the participants, more chances for them to qualifying for the next round.\n 4. In the case of tie between the participants a tie round will be conducted."
                        android:paddingBottom="15sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailsSmallTitle"
                        android:text="ROUND 2:(TWISTED TIC TAC TOE)"
                        android:paddingBottom="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text=" 1. Tic-Tac-Toe (Rules for this round will be informed to you at time of the event."
                        android:paddingBottom="15sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/DetailsSmallTitle"
                        android:text="ROUND 3:(Treasure Hunt)"
                        android:paddingBottom="10sp"
                        android:id="@+id/textView17" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text=" 1. Rules for this round will be informed to you at time of the event "

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/SmallTitle"
                        android:text="No of Participants : 3 Participants per Team"
                        android:id="@+id/textView18"
                        android:paddingBottom="15sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/set_alarm"
            android:text="Remind Me"
            android:onClick="setReminder"
            style="@style/Text"
            android:background="@color/bnew"/>

    </LinearLayout>
</LinearLayout>