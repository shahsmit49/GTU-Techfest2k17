<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Fragment"
    android:background="@mipmap/bg_poster">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent">
        <ImageView
            style="@style/DetailsImage"
            android:src="@drawable/gravethejunk"
            android:id="@+id/header_image"
            />
    </LinearLayout>

    <View style="@style/HorizontalDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/content"
            android:layout_marginTop="5sp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DetailsSmallTitle"
                    android:text="DESCRIPTION"
                    android:paddingBottom="10sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SmallTitle"
                    android:text="Creativity never dies, It resurrects in the end it engender respect. So rise up and spread your creative wings and fly high to create the vigorous impact. Collect the junk, Create the model, Manhandle the equipments, Overcome the hurdle. Show your creativity, Build up and be quick, Beware of the competitors, Show them you got the tricks."
                    android:paddingBottom="15sp"
                    android:id="@+id/textView14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DetailsSmallTitle"
                    android:text="RULES AND REGULATIONS:"
                    android:paddingBottom="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SmallTitle"
                    android:text=" 1. Each team can have maximum of 4 participants.\n 2. The competition will be in two stages, first will be qualifying round and the second round will be the final round.\n 3. Each team has to complete the task within the given time limit (which will be declared at the time of competition). \n 4. Tools and other necessary equipments will be provided by event organizers. Usage of any equipment other than the given material is strictly prohibited. \n 5. If there is any damage to the tools provided or instruments then the respective team would be liable to pay for the damage. \n 6. The organizers are not responsible for the loss of any property, injury and delays during the event. \n 7. Participant needs to have basic idea about workshop safety and precautions. \n 8. Any indiscipline or bad behaviour towards committee members will lead to disqualification. \n 9. Judgeâ€™s decision shall be treated as final and binding for all. \n 10. Any team that is not ready at the time specified will be disqualified from the competition automatically.\n 11. All rights are reserved with the coordinators. They may or may not disclose any information depending upon the information asked. They can change any rule at any time according to the situation. "
                    android:paddingBottom="15sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DetailsSmallTitle"
                    android:text="NOTE:"
                    android:paddingBottom="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SmallTitle"
                    android:text="Number of rounds may be increased as per the number of participants. It will be decided by the organizers."
                    android:paddingBottom="15sp"
                    />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/set_alarm"
            android:text="Remind Me"
            android:onClick="setReminder"
            style="@style/Text"
            android:background="@color/bnew"
            />

    </LinearLayout>
</LinearLayout>