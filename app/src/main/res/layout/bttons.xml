<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/schedulebackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="111dp"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6th March"
            android:textSize="35dp"
            android:layout_marginEnd="55dp"
            android:id="@+id/textmar6"
            android:textColor="#ffffff"
            android:paddingTop="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sixmarch1"
            android:id="@+id/imagemar6"
            android:layout_marginEnd="18dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textmar6" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/relativeLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7th March"
            android:textSize="35dp"
            android:layout_marginEnd="55dp"
            android:id="@+id/textmar7"
            android:textColor="#ffffff"
            android:paddingTop="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sevenmarch1"
            android:id="@+id/imagemar7"
            android:layout_marginEnd="18dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textmar7" />

    </RelativeLayout>

</RelativeLayout>